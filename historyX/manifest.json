{
  "manifest_version": 3,
  "name": "History X",
  "description": "Auto history deletion & clutter removal.",
  "version": "1.0",
  "permissions": ["storage", "history", "tabs", "webNavigation"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo/history-x-16.png",
      "32": "logo/history-x-32.png",
      "48": "logo/history-x-48.png",
      "128": "logo/history-x-128.png"
    }
  },
  "icons": {
    "16": "logo/history-x-16.png",
    "32": "logo/history-x-32.png",
    "48": "logo/history-x-48.png",
    "128": "logo/history-x-128.png"
  }
}
